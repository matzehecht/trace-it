{
  "compilerOptions": {
    "checkJs": false,
    "target": "es5",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2019"],
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./packages",
    "composite": true,
    "paths": {
      "trace-it": ["./core"],
      "@trace-it/cli": ["./cli"],
      "@trace-it/types": ["./types"],
      "@trace-it/lowdb-adapter": ["./lowdb-adapter"],
      "@trace-it/mongodb-adapter": ["./mongodb-adapter"]
    }
  }
}
