{
    "compilerOptions": {
        "outDir": "./dist",
        "checkJs": false,
        "target": "es5",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "lib": ["es2019"],
        "noEmitOnError": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tmp/*"
    ]
}